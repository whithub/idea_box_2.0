<div class="search-form">

  <%= form_for @idea do |f| %>

    <%= f.label :title %>
    <%= f.text_field :title, placeholder: "New Idea Title" %><br>

    <%= f.label :description %>
    <%= f.text_area :description, placeholder: "New Idea Description" %><br>

    <%= f.submit %>
  <% end %>

</div>
