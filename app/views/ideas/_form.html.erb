<div class="idea-form">

    <%= form_for @idea do |f| %>

    <%= f.label :title %>
    <%= f.text_field :title, class: 'form-field', placeholder: "New Idea Title" %><br>

    <%= f.label :description %>
    <%= f.text_area :description, class: 'form-field', placeholder: "New Idea Description" %><br>

    <%= f.submit "Save", class: 'create-idea' %>
  <% end %>

</div>
